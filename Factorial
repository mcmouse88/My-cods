#include <iostream>

using namespace std;
int fact(int n); // Создаем прототип функции
	
int main() {
	int m; // Создаем переменную целого числа
	cin >> m; // Вводим значение переменной
	cout << fact(m); // Выводим факториал введенного числа

	cin.get();
	return 0;
}

int fact(int n) { // Создаем функцию вычисления факториал
	int m = 1; // Создаем переменную целого числа, которое по умолчанию равно 1, но по выполнению функции будет равно факториалу числа
	if (n > 10 || n < -10) // Создаем условие, что если пользователь выбрал число более 10 или менее -10, то вылезет сообщение об ошибке
		cout << "wrong number" << endl; // Сообщение об ошибке
	else if (n < 0) // Создаем второе условие, что если пользователь ввел число меньше нуля, то программа выводит значение числа по умолчанию то есть 1
		return m;			
	else {
		for (int i = 1; i <= n; i++) { // Во всех остальных случаях, программа высчитывает факториал числа, перебирая предварительно число от 1 до введенного числа через оператор for
			m = m * i;
		}
	}
	return m;
}
